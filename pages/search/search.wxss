.title{
  width: 100%;
  height: 100rpx;
  background-color: white;
  box-shadow:2px 2px 4px #999999;
  position: relative;
}
.search{
  font-size: 34rpx;
  font-weight: 600;
  position: absolute;
  left: 70rpx;
  top:32rpx; 
}
image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 28rpx;
}
.section{
  width: 100%;
  margin-top: 30rpx;
  height: 60rpx;
  position: relative;
}
input{
  width: 90%;
  padding-left: 55rpx;
  margin-left: 10rpx;
  border: 1px solid #eeeef0;
  border-radius: 40rpx;
  height: 60rpx;
}
.pic{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 13rpx;
  left: 18rpx;
}
.info{
 width: 100%;
 margin-top: 30rpx;
}
.info text{
  font-size: 27rpx;
  display: inline-block;
  text-align: center;
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #1f99b0;
  border-radius: 10rpx;
  color: #fff;
  background: #1f99b0;
  margin: 20rpx 10rpx;
}