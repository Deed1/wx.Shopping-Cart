.title{
    position: fixed;
    top: 0;
    width: 100%;
    height: 70rpx;
    font-size: 35rpx;
    line-height: 70rpx;
    font-weight: 500;
    background: #fff;
    box-shadow:2px 2px 4px #999999;
}
text{
    margin-left: 20rpx;
}
image{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;  
}
.news{
    width: 100%;
    padding: 20rpx;
    margin-top: 50rpx;
}
.news_title{
    width: 90%;
    height: 100rpx;
    font-size: 30rpx;
    color: #2f373a;
    padding:10rpx;
}
.news_time{
    text-align: right;
    padding:0 30rpx 20rpx 0;
    font-size: 28rpx;
    color:#888;
}
