.fater{
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: center;
}
.kid{
   display: flex;
   justify-content: center;
   align-items: center;
   width: 100%;
   height: 50px;
   background-color: #fff;
   border-bottom: 2px solid #a9b7b7;
   position: relative;
}
image{
    position: absolute;
    left: 10px;
}
.public{
    width: 120px;
    height: 25px;
    text-align: center;
    border: 1px solid #1f99b0;
}
.active{
    background-color: #1f99b0;
    color: #fff;
}
.home{
    position: absolute;
    right: 10rpx;
    color: #1f99b0;
    text-align: center;
}
.kid_bottom{
    display: flex;
    width: 100%;
    flex-direction: column;
}
.title{
    width: 80%;
    height: 50px;
    line-height: 60px;
    margin: 0 auto;
}
input{
    background-color: #a9b7b7;
    border-radius: 40rpx;
    padding-left: 20rpx;
    width: 80%;
    height: 30px;
    margin: 0 auto;
}

.footer{
    text-align: center;
    height: 35px;
    width: 400rpx;
    line-height: 35px;
    margin: 0 auto;
    color: #fff;
    margin-top: 20px;
    background-color: #1f99b0;
    border-radius: 70rpx;
}
.fater-register{
    display: flex; 
    flex-direction: column;
}
.title_bottom{
    width: 80%;
    font-size: 12px;
    color:red;
    margin: 0 auto;
}
.right{
    position: absolute;
    right: 70rpx;
    font-size: 12px;
    color:red;
}
.gender{
    width: 80%;
    height: 50px;
    line-height: 60px;
    margin: 0 auto;
}
.radio-group{
    width: 80%;
    height: 50px;
    line-height: 55px;
    margin: 0 auto;
    margin-top: 20px;
    font-size: 14px;
}
