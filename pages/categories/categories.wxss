.container{
display: flex;
padding:0;
width: 100%;
position: relative;
}
.title{
width:100%;
height: 35px;
/* border-bottom:1px solid #999999; */
box-shadow:2px 2px 4px #999999;
}
 .one{
   position: absolute;
   top: 6px;
   left: 6px;
 }
 .two{
   position: absolute;
   right: 50px;
   top: 6px;
 }
 .three{
   position: absolute;
   right: 20px;
   top: 8px;
 }
 .swiper-tab{
   width: 100%;
   border-bottom:1px solid #CCCCCC;
 }
 .swiper-tab-list{
   text-align: center; 
   font-size: 28rpx;
   margin-left: 20rpx;
   height: 70rpx;
   line-height: 70rpx;
 }
 .active{
   border-bottom:2px solid #1f99b0;
   color:#1f99b0;
   height: 70rpx;
   line-height: 70rpx;
 }
 .info{
   width: 100%;
 }
 .pic{
   display: block;
   width: 95%;
   height: 300rpx;
   margin-left: 20rpx;
   margin-top:20rpx;
   border-radius: 10rpx;
 }
 .info_name{
  display: block;
  text-align: left;
  margin-left: 20rpx;
  margin-top:20rpx;
  font-size: 28rpx;
 }
.info_new{
  text-align: left;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top:20rpx;
  color:#888;
  font-size: 25rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}